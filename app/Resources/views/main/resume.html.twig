{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://getbootstrap.com/docs/4.0/examples/offcanvas/offcanvas.css">
    <style>
        body{
            padding-top: 0px;
        }
    </style>
{% endblock %}
{% block body %}

    <main role="main" class="container">
        <div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded box-shadow">
            <img class="mr-3" src="{{ asset('asset/images/github.png') }}" alt="" width="48" height="48">
            <div class="lh-100">
                <h6 class="mb-0 text-white lh-100">{{ username | upper}}</h6>
                <small>
                    {% if blog is not empty %}
                        {{ blog }}
                    {% endif %}
                </small>
            </div>
        </div>

        <div class="my-3 p-3 bg-white rounded box-shadow">
            {% include('main/resume_languages.html.twig') %}
        </div>
        <div class="my-3 p-3 bg-white rounded box-shadow">
            {% include('main/resume_repositories.html.twig') %}
            <small class="d-block text-right mt-3">
                <a href="https://github.com/{{ username }}"> See {{ username }}'s account </a>
            </small>
        </div>
    </main>

{% endblock %}